<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFA0">

    <ImageView
        android:id="@+id/customListItemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/customListItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/customListItemImageView"
        android:layout_alignParentTop="true"
        android:textStyle="italic"
        android:textSize="18dp"
        android:textColor="#2222A2"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/customListItemSubTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="14dp"
        android:text="Subtext"
        android:textColor="#555555"
        android:layout_toRightOf="@id/customListItemImageView"
        android:layout_below="@id/customListItemTextView"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"/>

</RelativeLayout>

